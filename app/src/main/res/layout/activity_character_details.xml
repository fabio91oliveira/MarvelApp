<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorSoftGrey"
        tools:context=".feature.characterdetails.ui.activity.CharacterDetailsActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="?attr/homeAsUpIndicator"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            style="@style/ToolBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:background="@color/colorSoftGrey"
            tools:layout_editor_absoluteX="0dp">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgCharacter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/character_list_image_item_height"
                app:srcCompat="@color/colorAccent"
                app:layout_constraintTop_toTopOf="parent"/>

        <View
                android:id="@+id/viewLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_twenty_four"
                android:background="@color/colorBlack"
                app:layout_constraintTop_toBottomOf="@id/imgCharacter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtCharacterResourceURI"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_twelve"
                android:layout_marginStart="@dimen/margin_twenty_four"
                android:layout_marginLeft="@dimen/margin_twenty_four"
                android:layout_marginEnd="@dimen/margin_six"
                android:layout_marginRight="@dimen/margin_six"
                android:gravity="end"
                app:layout_constraintTop_toTopOf="@id/viewLine"
                app:layout_constraintBottom_toBottomOf="@id/viewLine"
                app:layout_constraintEnd_toEndOf="@id/viewLine"
                app:layout_constraintStart_toStartOf="@id/viewLine"
                android:textColor="@color/colorWhite"
                android:ellipsize="end"
                android:singleLine="true"
                tools:text="@tools:sample/lorem"/>

        <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/chkFavorite"
                android:layout_width="@dimen/favorite_icon_size"
                android:layout_height="@dimen/favorite_icon_size"
                android:layout_marginEnd="@dimen/margin_ten"
                android:layout_marginRight="@dimen/margin_ten"
                app:layout_constraintTop_toTopOf="@+id/txtCharacterName"
                app:layout_constraintBottom_toBottomOf="@id/txtCharacterName"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/selector_favorite_button"
                android:stateListAnimator="@animator/scale"
                android:clickable="true"
                android:button="@null"
                android:checked="false"
                android:focusable="true"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtCharacterName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txtCharacterResourceURI"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_twenty_two"
                android:layout_marginTop="@dimen/margin_ten"
                android:layout_marginStart="@dimen/margin_ten"
                android:layout_marginLeft="@dimen/margin_ten"
                android:layout_marginEnd="@dimen/margin_ten"
                android:layout_marginRight="@dimen/margin_ten"
                tools:text="@tools:sample/lorem"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtCharacterDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_eighteen"
                app:layout_constraintTop_toBottomOf="@id/txtCharacterName"
                app:layout_constraintStart_toStartOf="@id/txtCharacterName"
                app:layout_constraintEnd_toEndOf="@id/txtCharacterName"
                android:textColor="@color/colorWhite"
                tools:text="@tools:sample/lorem"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCharacterInfoList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/txtCharacterDescription"
                android:divider="@android:color/transparent"
                tools:listitem="@layout/item_character"
                android:visibility="visible"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>