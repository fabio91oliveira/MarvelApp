<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtCharacterResourceURI"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_twelve"
                    android:layout_marginStart="@dimen/margin_twenty_four"
                    android:layout_marginLeft="@dimen/margin_twenty_four"
                    android:layout_marginEnd="@dimen/margin_six"
                    android:layout_marginRight="@dimen/margin_six"
                    android:gravity="end"
                    app:layout_constraintTop_toTopOf="@id/viewLine"
                    app:layout_constraintBottom_toBottomOf="@id/viewLine"
                    app:layout_constraintEnd_toEndOf="@id/viewLine"
                    app:layout_constraintStart_toStartOf="@id/viewLine"
                    android:textColor="@color/colorBlack"
                    android:ellipsize="end"
                    android:singleLine="true"
                    tools:text="@tools:sample/lorem"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtCharacterName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/txtCharacterResourceURI"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_twenty_two"
                    android:layout_marginTop="@dimen/margin_ten"
                    android:layout_marginStart="@dimen/margin_ten"
                    android:layout_marginLeft="@dimen/margin_ten"
                    android:layout_marginEnd="@dimen/margin_ten"
                    android:layout_marginRight="@dimen/margin_ten"
                    tools:text="@tools:sample/lorem"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtCharacterDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_eighteen"
                    app:layout_constraintTop_toBottomOf="@id/txtCharacterName"
                    app:layout_constraintStart_toStartOf="@id/txtCharacterName"
                    app:layout_constraintEnd_toEndOf="@id/txtCharacterName"
                    tools:text="@tools:sample/lorem"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCharacterInfoList"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtCharacterDescription"
                    android:visibility="invisible"/>

            <androidx.core.widget.ContentLoadingProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_marginTop="@dimen/margin_twenty_four"
                    android:indeterminate="true"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtCharacterDescription"
                    android:visibility="gone"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>


    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_bar_height">
        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:id="@+id/imgCharacter"
                    app:srcCompat="@color/colorPrimaryDark"
                    app:layout_collapseMode="parallax"/>
            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    app:navigationIcon="?attr/homeAsUpIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/chkFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_six"
            android:layout_marginEnd="@dimen/margin_six"
            android:src="@drawable/selector_favorite_button"
            app:layout_anchor="@id/appBar"
            android:tint="@color/colorWhite"
            app:layout_anchorGravity="right|bottom"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>