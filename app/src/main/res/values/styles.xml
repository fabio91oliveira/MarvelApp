<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorSecondDark</item>
    </style>
    <style name="AppTheme.SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_theme</item>
    </style>
    <style name="TextAppearance.CollapsingToolbar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_twenty_two</item>
    </style>
</resources>
